<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="data_sense.View.DatabaseTypePopupPage"
             Title="DatabaseTypePopupPage">
   <ContentPage.Content>
        <StackLayout>
            <Label Text="Select Database Type"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
            <Picker x:Name="DatabaseTypePicker" Title="Database Type">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>MongoDB</x:String>
                        <x:String>SQL</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Select" Clicked="OnDatabaseTypeSelected"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
