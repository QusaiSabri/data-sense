<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="data_sense.MainPage">
<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Pane -->
        <StackLayout Grid.Column="0" BackgroundColor="Coral" Padding="20">
            <!-- Content for the left pane -->
            <Button Text="Connect" FontSize="Medium" Clicked="OnConnectClicked" />

            
        </StackLayout>

        <!-- Right Area -->
        <StackLayout Grid.Column="1" BackgroundColor="DarkGreen">
            <!-- Content for the right area -->
        </StackLayout>
    </Grid>


</ContentPage>
