<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="data_sense.MainPage">

      <StackLayout Spacing="0" Padding="20" BackgroundColor="CadetBlue">
        <StackLayout Orientation="Horizontal" BackgroundColor="Blue">
            <Button Text="Connect"
                    HorizontalOptions="Start" />
        </StackLayout>
        <ScrollView>
            <StackLayout Spacing="25" BackgroundColor="Azure">
                <!-- Content for the Home Screen -->                
                <Label Text="Content for the Home Screen"
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

            </StackLayout>
        </ScrollView>
    </StackLayout>

</ContentPage>
